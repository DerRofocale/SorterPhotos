<Window
    x:Class="SorterPhotos.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SorterPhotos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:SorterPhotos.ViewModel"
    Title="MainWindow"
    Width="900"
    Height="500"
    MinWidth="350"
    MinHeight="250"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodel:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="200" MaxWidth="300" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ListBox
                        x:Name="JPEGList"
                        Grid.Column="0"
                        Margin="3"
                        ItemsSource="{Binding FilesJPEGProp}"
                        SelectionMode="Extended" />
                    <ListBox
                        Grid.Column="1"
                        Margin="3"
                        ItemsSource="{Binding FilesCR2Prop}"
                        SelectionMode="Extended" />
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        Margin="3"
                        VerticalContentAlignment="Center"
                        IsReadOnly="True"
                        Text="{Binding PathJPEGProp, TargetNullValue=Путь не указан}" />
                    <TextBox
                        Grid.Column="1"
                        Margin="3"
                        VerticalContentAlignment="Center"
                        IsReadOnly="True"
                        Text="{Binding PathCR2Prop, TargetNullValue=Путь не указан}" />
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Margin="3"
                        Command="{Binding OpenDirectoryJPEG}"
                        Content="Путь к JPEG" />
                    <Button
                        Grid.Column="1"
                        Margin="3"
                        Command="{Binding OpenDirectoryCR2}"
                        Content="Путь к CR2" />

                </Grid>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <!--<ColumnDefinition />-->
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Margin="3"
                        Content="Отсортировать" />
                    <!--<Button
                        Grid.Column="1"
                        Margin="3"
                        Content="Отсортировать" />-->

                </Grid>
            </Grid>
            <Grid Grid.Column="1" Background="LightGray">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="0"
                    Margin="3"
                    RenderTransformOrigin="0.5,0.5"
                    Source="{Binding ElementName=JPEGList, Path=SelectedValue}">
                    <!--<Image.Source>
                        <BitmapImage UriSource="{Binding ElementName=JPEGList, Path=SelectedValue}" Rotation="Rotate90" />
                    </Image.Source>-->
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=rotateCheckBox, Path=IsChecked}" Value="true">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <RotateTransform Angle="-90" />
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <StackPanel
                    Grid.Row="1"
                    Margin="3"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <CheckBox
                        x:Name="rotateCheckBox"
                        Margin="0,0,6,0"
                        Content="Развернуть изображение" />
                </StackPanel>
            </Grid>
        </Grid>
        <TextBlock
            Grid.Row="1"
            Margin="3,0,3,0"
            VerticalAlignment="Center"
            Text="{Binding LastActionProp}"
            TextAlignment="Right" />
    </Grid>
</Window>